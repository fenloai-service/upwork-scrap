# Streamlit Secrets Configuration Template
# Copy this file to .streamlit/secrets.toml and fill in your actual values
# NEVER commit .streamlit/secrets.toml to version control

# ── Database ──────────────────────────────────────────────────────────────────
# Set DATABASE_URL to use Neon PostgreSQL for cloud deployment.
# Leave commented out to use local SQLite (default).
# DATABASE_URL = "postgresql://user:password@ep-xxx-xxx-123456.us-east-2.aws.neon.tech/neondb?sslmode=require"

# Email configuration (optional - for notifications)
[email]
# Gmail SMTP settings
# gmail_app_password = "your-16-char-app-password"
# from_email = "your-email@gmail.com"
# to_email = "recipient@example.com"

# API Keys (optional - for AI classification and proposal generation)
[api]
# xAI Grok API key
# xai_api_key = "xai-your-api-key-here"

# Authentication (optional - leave commented out to disable login)
[auth]
# username = "your-username"
# password = "your-password"

# Deployment settings
[deployment]
# Set to "true" to enable read-only mode (hides edit/approve/reject buttons)
read_only = false
# Set to "true" to show only approved proposals in read-only mode
show_approved_only = false
